{
  "manifest_version": 3,
  "name": "Gemini AI Sidebar",
  "version": "1.0",
  "description": "A floating sidebar to chat with Gemini about the current page content.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/marked.min.js",
        "lib/katex.min.js",
        "lib/auto-render.min.js",
        "content.js"
      ],
      "css": [
        "lib/katex.min.css",
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}